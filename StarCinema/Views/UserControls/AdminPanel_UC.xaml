    Content="Confirm Password:"
    Foreground="{StaticResource AdminPanelForeGroundColor}" 
    BorderBrush="{StaticResource AdminPanelBorderColor}" 
    FontSize="{StaticResource AdminPanelFontSize}"
    Style="{StaticResource ArialBold}" HorizontalAlignment="Left" 
    Margin="109,16,0,0" Grid.Row="4" VerticalAlignment="Top" 
    Height="33" Width="198" HorizontalContentAlignment="Center"/>-->

</UserControl>
